<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:elevation="4dp"
    android:layout_margin="8dp">

    <!-- Left Border (Vertical) -->
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#CCCCCC" />

    <!-- Content Section (Note Card) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"> <!-- Added gravity to center the content -->

        <!-- Top Border -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC" />

        <!-- Note Content -->
        <TextView
            android:id="@+id/tvNoteContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_note_content"
            android:textSize="25sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:gravity="center" /> <!-- Center text -->

        <!-- Remove Button -->
        <Button
            android:id="@+id/btnRemoveNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remove"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:backgroundTint="@android:color/holo_red_light"
            android:layout_gravity="center" /> <!-- Center button -->

        <!-- Bottom Border -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC" />
    </LinearLayout>

    <!-- Right Border (Vertical) -->
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#CCCCCC" />

</LinearLayout>
